        <% else %>
          <li class="nav-item">
            <%= t('navbar_home.content.link11').html_safe %>
          </li>
          <li class="nav-item">
            <%= t('navbar_home.content.link12').html_safe %>
          </li>
          <li class="nav-item">
            <%= t('navbar_home.content.link13').html_safe %>
          </li>
          <li class="nav-item">
            <%= t('navbar_home.content.link14').html_safe %>
          </li>
          <li class="nav-item">
            <%= t('navbar_home.content.link15').html_safe %>
          </li>
          <li class="nav-item">
            <% if I18n.locale == :en %>
              <%= link_to "Login", new_user_session_path, class: "nav-link", id:'login' %>
            <% elsif I18n.locale == :fr %>
              <%= link_to "Se Connecter", new_user_session_path, class: "nav-link", id:'login' %>
            <% end %>
          </li>
          <li class="nav-item">
            <% if I18n.locale == :en %>
              <%= link_to "Sign Up", new_user_registration_path, class: "nav-link", id:'signup' %>
            <% elsif I18n.locale == :fr %>
              <%= link_to "S'inscrire", new_user_registration_path, class: "nav-link", id:'signup' %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
