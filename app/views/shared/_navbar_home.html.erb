      <span class="navbar-toggler-icon"></span>
    </button>
    <%= link_to "English", url_for(locale: 'en') %> | <%= link_to "Français", url_for(locale: 'fr') %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= t('navbar_home.content.link1').html_safe %>
          </li>
          <li class="nav-item">
            <%= t('navbar_home.content.link2').html_safe %>
          </li>
          <li class="nav-item">
            <%= t('navbar_home.content.link3').html_safe %>
          </li>
          <li class="nav-item">
            <%= t('navbar_home.content.link4').html_safe %>
          </li>
          <li class="nav-item">
            <%= t('navbar_home.content.link5').html_safe %>
          </li>
          <li class="nav-item dropdown" style="margin-right:50px;margin-left:10px">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.photo.present? && current_user.photo.key.present? %>
                <%= cl_image_tag current_user.photo.key, class:"avatar" %>
              <% else %>
                <%= image_tag "logoLightGray.png", class: "avatar", alt: "dropdown menu" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= t('navbar_home.content.link6').html_safe %>
              <%= t('navbar_home.content.link7').html_safe %>
              <%= t('navbar_home.content.link8').html_safe %>
              <% if I18n.locale == :en %>
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
