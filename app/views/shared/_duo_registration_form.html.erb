<div class="main-container">
  <div class=" container registration-form">
    <div class="registration-form-inner text-center">
      <%= link_to image_tag("eng.png", style:"width:20px;margin-left:100px", class:"text-center"), url_for(locale: 'en') %> | <%= link_to image_tag("fr.png", style:"width:20px;margin-right:100px", class:"text-center"), url_for(locale: 'fr') %>
      <%= t('duo_registration_form.registration_form_inner_text.h1').html_safe %>
      <%= t('duo_registration_form.registration_form_inner_text.h2').html_safe %>
      <%= t('duo_registration_form.registration_form_inner_text.h3').html_safe %>
      <div class="container">
        <%= form_with(
                        model: @group_form,
                        url: group_forms_path,
                        local: true,
                        method: :post,
                        data: { controller: "flatpickr participants age" }
                      ) do |f| %>
          <div class="d-flex justify-content-around mt-5">
            <div class="field">
              <%# <%= f.label :name %>
              <%= f.text_field :name, placeholder: t('duo_registration_form.registration_form_inner_text.duo.placeholders.name'), class: "input-form" %>
            </div>
            <div>
              <%# <%= form.label :responsable %>
              <%= f.text_field :responsable, placeholder: t('duo_registration_form.registration_form_inner_text.duo.placeholders.responsable'), class: "input-form" %>
            </div>
            <div>
              <%# <%= f.label :address %>
              <%= f.text_field :address, placeholder: t('duo_registration_form.registration_form_inner_text.duo.placeholders.address'), class: "input-form" %>
            </div>
            <div>
              <%# <%= f.label :phone %>
              <%= f.text_field :phone, placeholder: t('duo_registration_form.registration_form_inner_text.duo.placeholders.phone'), class: "input-form" %>
            </div>
            <div>
              <%# <%= f.label :email %>
              <%= f.text_field :email, placeholder: t('duo_registration_form.registration_form_inner_text.duo.placeholders.email'), class: "input-form" %>
            </div>
          </div>
          <div class="d-flex justify-content-around ">
            <div>
              <%# <%= f.label :title_of_piece %>
              <%= f.text_field :title_of_music, placeholder: t('duo_registration_form.registration_form_inner_text.duo.placeholders.title_of_music'), class: "input-form" %>
            </div>
            <div>
              <%= f.text_field :composer, placeholder: t('duo_registration_form.registration_form_inner_text.duo.placeholders.composer'), class: "input-form" %>
            </div>
            <div>
              <%# <%= f.label :length_of_piece, "Length of Piece in minutes", class: "label" %>
              <%= f.number_field :length_of_piece, placeholder: t('duo_registration_form.registration_form_inner_text.duo.placeholders.length_of_piece'), class: "input-form", step: 1, min: 0 %>
            </div>
          </div>
          <div class="d-flex justify-content-around">
            <div id="style">
              <%# <%= f.label :discipline %>
              <%= f.select :discipline, options_for_select(['Classique', 'Modern’Jazz', 'Contemporain', 'Caractère']), prompt: t('duo_registration_form.registration_form_inner_text.duo.prompts.disciplines'), class: "input-session" %>
            </div>
            <div id="level">
              <%# <%= f.label :level %>
              <%= f.select :level ,options_for_select(['Préparatoire', 'Elémentaire', 'Moyen', 'Supérieur', 'Formation']), prompt: t('duo_registration_form.registration_form_inner_text.duo.prompts.level'), class: "input-session", id:"category"%>
            </div>
          </div>

          <div data-controller="participant">
            <div class="d-flex">
              <h3 style="text-align:left"><%= t('duo_registration_form.registration_form_inner_text.duo.participant.participants') %></h3>
            </div>
            <div id="participants">
              <%= f.fields_for :participants do |p| %>
                <div class="participant-fields mb-3 pb-3" style="border-bottom:1px solid red">
                  <div class="d-flex justify-content-around">
                    <div>
                      <%= p.text_field :name, placeholder: t('duo_registration_form.registration_form_inner_text.duo.participant.placeholders.name'), class: "input-form-group" %>
                    </div>
                    <div>
                      <%= p.text_field :last_name, placeholder: t('duo_registration_form.registration_form_inner_text.duo.participant.placeholders.last_name'), class: "input-form-group" %>
                    </div>
                    <div>
                      <%= p.date_field :birth_date, placeholder: t('duo_registration_form.registration_form_inner_text.duo.participant.placeholders.birthday'), id:"myID", class: "input-form-group" %>
                    </div>
                    <div data-controller="age">
                      <%= p.number_field :age, placeholder: t('duo_registration_form.registration_form_inner_text.duo.participant.placeholders.age'), class: "input-form-group", id:"age-input", readonly: true %>
                    </div>
                  </div>
                  <div class="d-flex justify-content-around">
                    <div class="custom-file-input">
                      <%= p.file_field :photo, as: :file, id: "photo-input", class: "file-input" %>
                      <label for="photo-input" id="photo-label" class="file-label"><%= t('duo_registration_form.registration_form_inner_text.duo.participant.input_text.pic') %></label>
                      <span id="file-name"><%=t('duo_registration_form.registration_form_inner_text.duo.participant.span.no_file')%></span>
                    </div>
                    <div class="custom-file-input">
                      <%= p.file_field :file, as: :file, id: "file-input", class: "file-input" %>
                      <label for="file-input" id="file-label" class="file-label"><%= t('duo_registration_form.registration_form_inner_text.duo.participant.input_text.file') %></label>
                      <span id="file-name"><%=t('duo_registration_form.registration_form_inner_text.duo.participant.span.no_file')%></span>
                    </div>
                  </div>
                </div>
              <% end %>
              <div class="participant-fields mb-3 pb-3" data-controller="age" style="border-bottom:1px solid red">
                <div class="d-flex justify-content-around">
                  <div>
                    <input type="text" name="group_form[participants_attributes][1][name]" placeholder="<%=t('duo_registration_form.registration_form_inner_text.duo.participant.placeholders.name')%>" class="input-form-group">
                  </div>
                  <div>
                    <input type="text" name="group_form[participants_attributes][1][last_name]" placeholder="<%=t('duo_registration_form.registration_form_inner_text.duo.participant.placeholders.last_name')%>" class="input-form-group">
                  </div>
                  <div>
                    <input type="date" name="group_form[participants_attributes][1][birth_date]" placeholder="<%=t('duo_registration_form.registration_form_inner_text.duo.participant.placeholders.birthday')%>" class="input-form-group" id="myID">
                  </div>
                  <div>
                    <input type="number" name="group_form[participants_attributes][1][age]" placeholder="<%=t('duo_registration_form.registration_form_inner_text.duo.participant.placeholders.age')%>" class="input-form-group" id="age-input" readonly>
                  </div>
                </div>
                <div class="d-flex justify-content-around">
                  <div class="custom-file-input">
                    <input type="file" name="group_form[participants_attributes][1][photo]" class="file-input">
                    <label for="photo-input" id="photo-label" class="file-label">Choose a file</label>
                    <span id="file-name"><%=t('group_registration_form.registration_form_inner_text.group.participant.span.no_file')%></span>
                  </div>
                  <div class="custom-file-input">
                    <input type="file" name="group_form[participants_attributes][1][file]" class="file-input">
                    <label for="file-input" id="file-label" class="file-label">Authorization Form Filled</label>
                    <span id="file-name"><%=t('group_registration_form.registration_form_inner_text.group.participant.span.no_file')%></span>
                  </div>

                </div>
              </div>
            </div>
          </div>
          <div  style="width:200px">
            <%= f.submit "#{t('group_registration_form.registration_form_inner_text.group.participant.btn.create')}", class: "input-btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
