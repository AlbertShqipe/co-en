<%= render "shared/navbar" %>
<div class="container">
  <h2><%= t("devise_session.passwords.edit.text1") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password,
                  label: t("devise_session.passwords.edit.text2"),
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "input-session" } %>
      <%= f.input :password_confirmation,
                  label: t("devise_session.passwords.edit.text3"),
                  required: true,
                  input_html: { autocomplete: "new-password", class: "input-session" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devision_session.reset_password.text2"), class: "input-btn"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
