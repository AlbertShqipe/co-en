<%= render "shared/navbar" %>
<div class="container pt-5">
  <h2><%= t("devise_session.passwords.new.text1") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "input-session" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devise_session.passwords.new.text2"), class:"btn input-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
<%= render "shared/footer_fixed" %>
