<h1>Users and Their Individual Forms</h1>

<% @users.each do |user| %>
  <div class="user">
    <h2><%= user.name %> <%= user.last_name %></h2>

    <% user.individual_forms.each do |form| %>
      <div class="form">
        <p><strong>Form Name:</strong> <%= form.first_name %> <%= form.last_name %></p>
        <p><strong>Form File:</strong> <%= render_file_image(form, :file, @results_prod, @results_prod_1, @results_dev) %>
        <p><strong>Form ID Card:</strong> <%= render_file_image(form, :id_card, @results_prod, @results_prod_1, @results_dev) %>

        <% if form.photo.attached? %>
          <p><strong>Photo:</strong></p>
          <%= image_tag form.photo, alt: "Form Photo", width: 100 %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
