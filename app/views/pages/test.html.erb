<% @forms.each do |form| %>
  <div class="form-details">
    <h3><%= form[:type] %> - <%= form[:name] || 'No Name' %></h3>

    <div class="form-meta">
      <p><strong>Created At:</strong> <%= form[:created_at] %></p>
      <p><strong>Updated At:</strong> <%= form[:updated_at] %></p>
    </div>

    <% if form[:type] == "Individual" %>
      <div class="individual-info">
        <p><strong>First Name:</strong> <%= form[:name] %></p>
        <p><strong>Last Name:</strong> <%= form[:last_name] %></p>
        <p><strong>Birth Date:</strong> <%= form[:birth_date] %></p>
        <p><strong>Address:</strong> <%= form[:address] %></p>
        <p><strong>Phone:</strong> <%= form[:phone] %></p>
        <p><strong>Email:</strong> <%= form[:email] %></p>
        <p><strong>Teacher Name:</strong> <%= form[:teacher_name] %></p>
        <p><strong>Dance School:</strong> <%= form[:dance_school] %></p>
        <p><strong>Category:</strong> <%= form[:category] %></p>
        <p><strong>Style:</strong> <%= form[:style] %></p>
        <p><strong>Level:</strong> <%= form[:level] %></p>

        <!-- Correcting the file key check -->
        <% if form[:photo] %>
          <% matching_file = @results_prod.find { |hash| form[:photo] == "production/#{key}" } || @results_prod_1.find { |hash| form[:photo] == "production/#{key}" } || @results_dev.find { |hash| form[:photo] == "development/#{key}" } %>
                  <% if matching_file != nil %>
                    <% url =  matching_file["url"] %>
                    <% updated_url = url.sub(/\.pdf\z/, '.png') %>
                    <td style="text-align:center"><a href="<%=updated_url%>" target="_blank"><img src="<%=updated_url%>" alt="" width="50px"></a></td>
                    <% else %>
                    <td><p><%=t('show.no_file')%></p></td>
                  <% end %>
        <% end %>
        <% if form[:file] %>
          <% matching_file = @results_prod.find { |hash| form[:file] == "production/#{key}" } || @results_prod_1.find { |hash| form[:file] == "production/#{key}" } || @results_dev.find { |hash| form[:file] == "development/#{key}" } %>
                  <% if matching_file != nil %>
                    <% url =  matching_file["url"] %>
                    <% updated_url = url.sub(/\.pdf\z/, '.png') %>
                    <td style="text-align:center"><a href="<%=updated_url%>" target="_blank"><img src="<%=updated_url%>" alt="" width="50px"></a></td>
                    <% else %>
                    <td><p><%=t('show.no_file')%></p></td>
                  <% end %>
        <% end %>
        <% if form[:id_card] %>
          <% matching_file = @results_prod.find { |hash| form[:id_card] == "production/#{key}" } || @results_prod_1.find { |hash| form[:id_card] == "production/#{key}" } || @results_dev.find { |hash| form[:id_card] == "development/#{key}" } %>
                  <% if matching_file != nil %>
                    <% url =  matching_file["url"] %>
                    <% updated_url = url.sub(/\.pdf\z/, '.png') %>
                    <td style="text-align:center"><a href="<%=updated_url%>" target="_blank"><img src="<%=updated_url%>" alt="" width="50px"></a></td>
                    <% else %>
                    <td><p><%=t('show.no_file')%></p></td>
                  <% end %>
        <% end %>
      </div>
    <% elsif form[:type].in?(["DuoForm", "TrioForm", "GroupForm"]) %>
      <div class="group-info">
        <p><strong>Responsable:</strong> <%= form[:responsable] %></p>
        <p><strong>Address:</strong> <%= form[:address] %></p>
        <p><strong>Phone:</strong> <%= form[:phone] %></p>
        <p><strong>Email:</strong> <%= form[:email] %></p>
        <p><strong>Discipline:</strong> <%= form[:discipline] %></p>
        <p><strong>Level:</strong> <%= form[:level] %></p>
        <p><strong>Title of Music:</strong> <%= form[:title_of_music] %></p>
        <p><strong>Composer:</strong> <%= form[:composer] %></p>
        <p><strong>Length of Piece:</strong> <%= form[:length_of_piece] %></p>

        <h4>Participants</h4>
        <% form[:participants].each do |p| %>
          <div class="participant-info">
            <p><strong>First Name:</strong> <%= p[:first_name] %></p>
            <p><strong>Last Name:</strong> <%= p[:last_name] %></p>
            <p><strong>Birth Date:</strong> <%= p[:birth_date] %></p>
            <p><strong>Age:</strong> <%= p[:age] %></p>

            <!-- Correcting the file key check for participants -->
            <% if p[:photo] %>
                  <% matching_file = @results_prod.find { |hash| p[:photo] == "production/#{key}" } || @results_prod_1.find { |hash| p[:photo] == "production/#{key}" } || @results_dev.find { |hash| p[:photo] == "development/#{key}" } %>
                  <% if matching_file != nil %>
                    <% url =  matching_file["url"] %>
                    <% updated_url = url.sub(/\.pdf\z/, '.png') %>
                    <td style="text-align:center"><a href="<%=updated_url%>" target="_blank"><img src="<%=updated_url%>" alt="" width="50px"></a></td>
                    <% else %>
                    <td><p><%=t('show.no_file')%></p></td>
                  <% end %>
            <% end %>
            <% if p[:file] %>
              <% matching_file = @results_prod.find { |hash| p[:file] == "production/#{key}" } || @results_prod_1.find { |hash| p[:file] == "production/#{key}" } || @results_dev.find { |hash| p[:file] == "development/#{key}" } %>
                  <% if matching_file != nil %>
                    <% url =  matching_file["url"] %>
                    <% updated_url = url.sub(/\.pdf\z/, '.png') %>
                    <td style="text-align:center"><a href="<%=updated_url%>" target="_blank"><img src="<%=updated_url%>" alt="" width="50px"></a></td>
                    <% else %>
                    <td><p><%=t('show.no_file')%></p></td>
                  <% end %>
            <% end %>
            <% if p[:id_card] %>
              <% matching_file = @results_prod.find { |hash| p[:id_card] == "production/#{key}" } || @results_prod_1.find { |hash| p[:id_card] == "production/#{key}" } || @results_dev.find { |hash| p[:id_card] == "development/#{key}" } %>
                  <% if matching_file != nil %>
                    <% url =  matching_file["url"] %>
                    <% updated_url = url.sub(/\.pdf\z/, '.png') %>
                    <td style="text-align:center"><a href="<%=updated_url%>" target="_blank"><img src="<%=updated_url%>" alt="" width="50px"></a></td>
                    <% else %>
                    <td><p><%=t('show.no_file')%></p></td>
                  <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>

  </div>
  <hr>
<% end %>
