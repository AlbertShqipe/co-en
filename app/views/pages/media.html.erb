<%= render "shared/navbar"%>

<div class="portfolio-cont" data-controller="media-tabs" data-media-tabs-default-value="2024">
  <div class="portfolio-t-b" >
    <ul>
      <li data-media-tabs-target="link" data-action="click->media-tabs#open" data-id="2023">2023</li>
      <li data-media-tabs-target="link" data-action="click->media-tabs#open" data-id="2024" class="active">2024</li>
      <li data-media-tabs-target="link" data-action="click->media-tabs#open" data-id="videos" >Videos</li>
    </ul>
  </div>
  <div class="portfolio-cont hidden" data-media-tabs-target="tab" data-media-tabs-type-value="2023" data-id="2023">
    <%# populated area %>
    <div style="text-align:center">
      <p>Pas des photos pour l'instant</p>
    </div>
    <div style="text-align:center">
      <iframe width="560" height="315" src="https://www.youtube.com/embed/U4OS7-JBLYw?si=D7Uz9UcJwMo7__GF" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>
  </div>
  <div class="portfolio-cont " data-media-tabs-target="tab" data-media-tabs-type-value="2024" data-id="2024">
      <%# Populated area %>
      <div data-controller="slideshow">
        <div class="slideshow-container">
          <% @images.each_with_index do |image, index| %>
            <div class="mySlides" data-slideshow-target="slide">
              <div class="numbertext"><%= index + 1 %> / <%= @images.size %></div>
              <%= image_tag image["secure_url"], width:'50%', class:'img' %>
              <!--
                <div class="text">Caption Text for image <%= index + 1 %></div>
              -->
            </div>
          <% end %>
        </div>
        <div class="thumbnail-container container">
          <% @images.each_with_index do |image, index| %>
            <div class="thumbnail" data-action="click->slideshow#selectSlide">
              <%= image_tag image["secure_url"], style:"width:30px !important;height:40px", data: { index: index + 1 }, class: 'img' %>
            </div>
          <% end %>
        </div>
        <div style="text-align:center">
          <iframe width="560" height="315" src="https://www.youtube.com/embed/LxrUJcbGgBY?si=DzjX32PoZT8fAlRD" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe><br>
        </div>
      </div>
  </div>
  <div class="portfolio-cont hidden" data-media-tabs-target="tab" data-media-tabs-type-value="videos" data-id="videos">
    <%# populated area %>
    <div style="text-align:center">
      <div class="mx-auto">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/LxrUJcbGgBY?si=DzjX32PoZT8fAlRD" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe><br>
        <iframe width="560" height="315" src="https://www.youtube.com/embed/U4OS7-JBLYw?si=D7Uz9UcJwMo7__GF" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
