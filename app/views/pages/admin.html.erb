
<div class="portfolio-cont" data-controller="tabs-admin" data-tabs-default-value="solos">
  <%= link_to "Retour", :back, style: "color:white; margin:140px;text-decoration:none;" %>
  <div class="portfolio-t-b" >
    <ul>
      <li data-tabs-admin-target="link" data-action="click->tabs-admin#open" data-id="solos" class="active">Solos</li>
      <li data-tabs-admin-target="link" data-action="click->tabs-admin#open" data-id="duos">Duos</li>
      <li data-tabs-admin-target="link" data-action="click->tabs-admin#open" data-id="trios">Trios</li>
      <li data-tabs-admin-target="link" data-action="click->tabs-admin#open" data-id="group">Groups</li>
    </ul>
  </div>
  <div class="portfolio-con" data-tabs-admin-target="tab" data-tabs-admin-type-value="solos" data-id="solos">
    <div class="portfolio-container" data-controller="tabs">
      <div class="portfolio-tab-bar">
        <select id="solo-select">
          <option value="">Sélectionnez un Solo</option>
          <% @solos.each do |solo| %>
            <option value="<%= solo.id %>"><%= solo.first_name %></option>
          <% end %>
        </select>
      </div>
      <div id="solo-info" data-tabs-target="soloInfo" class="portfolio-content mx-auto">
        <!-- This will be dynamically populated based on the selected group -->
        <p><%= @solos.count %>
          <% if @solos.count == 1 %>
            <%= "Individual Form" %>
          <% else %>
            <%= "Individual Forms" %>
          <% end %>
        </p>
        <p>Veuillez sélectionner un Solo pour voir ses informations.</p>
      </div>
    </div>
  </div>
  <div class="portfolio-con hidden" data-tabs-admin-target="tab" data-tabs-admin-type-value="duos" data-id="duos">
