<!DOCTYPE html>
<html>
  <head>
    <title>ConcoursEntrelace</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>


    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <style>
      body {
        /* position: relative; */
        color: white;
        /* background-color: black; */
      }

      input {
        color: black !important;
      }

      textarea {
        color: black !important;

      }
    </style>
  </head>

  <body>
    <%= render "shared/navbar" unless current_page?(root_path) ||
                                      current_page?(new_individual_form_path) ||
                                      current_page?(new_group_form_path)%>
    <%= render "shared/flashes" %>
    <%= render "shared/expandable_div_left" unless  current_page?(new_user_session_path) ||
                                                    current_page?(new_user_password_path) ||
                                                    current_page?(new_user_registration_path) %>
    <%= render "shared/expandable_div_right" unless current_page?(new_user_session_path) ||
                                                    current_page?(new_user_password_path) ||
                                                    current_page?(new_user_registration_path) ||
                                                    current_page?(new_individual_form_path) ||
                                                    current_page?(new_group_form_path)%>
    <%= yield %>
    <div id="backToTop" title="Back to the top" data-controller="back-to-top">
      <a href="#top" class="material-symbols-outlined">
        arrow_upward
      </a>
    </div>
    <%= render "shared/footer" unless current_page?(profile_path) ||
                                      # current_page?(our_partners_path) ||
                                      current_page?(new_group_form_path) ||
                                      current_page?(new_individual_form_path) ||
                                      current_page?(new_user_session_path) ||
                                      current_page?(new_user_password_path)
                                      %>
  </body>
</html>
